{
    "extends": "./tsconfig.base.json",
    "include": ["src/**/*", "test/**/*", "scripts/**/*"],
    "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true,
        "outDir": "./dist",
        "rootDirs": ["./src", "./test", "./scripts"]
    },
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS"
        },
        "ignore": ["/node_modules*"]
    }
}