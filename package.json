{
  "name": "web-3-helpers",
  "version": "1.0.0",
  "description": "Repository with useful web3 helper resources.",
  "main": "index.js",
  "scripts": {
    "run:main": "ts-node src/main.ts",
    "typecheck": "yarn tsc --noEmit",
    "typechain:generate": "npx typechain --target ethers-v6 './contracts/**/*.json' --out-dir ./typechain",
    "format": "yarn prettier --write \"**/src/**/**/*.{js,ts}\"",
    "lint:nofix": "yarn eslint \"{src,test}/**/*.{ts,js}\" --quiet",
    "lint": "yarn lint:nofix --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "victortanzy",
  "license": "MIT",
  "dependencies": {
    "@typechain/ethers-v6": "^0.4.0",
    "axios": "^1.4.0",
    "bull": "^4.10.4",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "devDependencies": {
    "typechain": "^8.2.0",
    "pm2": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
